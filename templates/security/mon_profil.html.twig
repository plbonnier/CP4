{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<div class="vh-100">
		<div class="d-flex flex-column align-items-center">
			<img src="{{ vich_uploader_asset(app.user) }}" class="img-fluid rounded-start object-fit-cover w-25" alt="photo de {{ app.user.firstname }} {{ user.lastname }}"/>

			<h1 class="mt-3">{{ app.user.firstname }}
				{{ app.user.lastname }}</h1>

			<p class="mt-3">Email :
				{{ app.user.email }}
			</p>
			<p class="mt-3">Adresse :
				{{ app.user.adress}}
				{{ app.user.zipcode}}
				{{ app.user.city }}{{ app.user.country }}
			</p>
			<p>

				<a href="{{ path('app_profile_edit') }}" class="btn button-cta mt-4 mb-2" tabindex="-1" role="button" aria-disabled="true">Modifier mes information</a>
				<div class="d-flex button-cta mt-3">{{ include('security/_delete.html.twig') }}</div>
			</p>
		</div>
	</div>
{% endblock %}
