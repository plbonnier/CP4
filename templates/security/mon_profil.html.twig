{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}
	<div class="h-100">
		<div class="d-flex flex-column align-items-center">
			<img src="{{ vich_uploader_asset(app.user) }}" class="img-fluid rounded-start object-fit-cover w-25" alt="photo de {{ app.user.firstname }} {{ user.lastname }}"/>

			<h1 class="mt-3">{{ app.user.firstname }}
				{{ app.user.lastname }}</h1>

			<p class="mt-3">Email :
				{{ app.user.email }}
			</p>
			<p class="mt-3">Adresse :
				{{ app.user.adress}}
				{{ app.user.zipcode}}
				{{ app.user.city }}{{ app.user.country }}
			</p>
			<p>

				<h2 class="text-center">Mes parrainnages</h2>
				<div class="d-flex justify-content-evenly gap-5 flex-wrap mx-auto">
					{% for adopt in user.adopts %}
						<div class="card w-25">
							<img src="{{ vich_uploader_asset(adopt.orangoutan, 'pictureFile') }}" class="card-img-top object-fit-cover" alt="{{ adopt.orangoutan.name }}">
							<div class="card-body">
								<p class="card-text">{{ adopt.orangoutan.name }}</p>
								<p class="card-text">Montant de votre parrainage :
									{{ adopt.money }}
									â‚¬</p>
								<p class="card-text">Date de votre parrainage :
									{{ adopt.date|date('d-m-Y') }}</p>
								<p class="card-text">Son histoire :
									{{ adopt.story }}</p>
							</div>
						</div>
					{% endfor %}
				</div>
				<a href="{{ path('app_profile_edit') }}" class="btn button-cta mt-4 mb-2" tabindex="-1" role="button" aria-disabled="true">Modifier mes information</a>
				<div class="d-flex button-cta mt-3">{{ include('security/_delete.html.twig') }}</div>
			</p>
		</div>
	</div>
{% endblock %}
